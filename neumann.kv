#:import gradient_shader main.gradient_shader
#:import tunnel_fly_shader main.tunnel_fly_shader
#:import critical_finder_shader main.critical_finder_shader
#:import main main

<VSeparator>:
    size_hint_y: None
    height: dp(2)
    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1.0
        Line:
            points: [self.x, self.y + 0.5*self.height, self.x + self.width, self.y + 0.5*self.height]
            width: 1.1

<SecondaryShader>:

<GradientShader>:

<Interface>:
    shader_display: shader
    resolution_slider: size_slider
    orientation: 'vertical'
    FloatLayout:
        NeumannShader:
            id: shader
            fbo_size: map(int, (size_slider.value, size_slider.value))
            gradient_opacity: 0.0 #float(opacity_slider.value)
            phase_increment: float(phase_slider.value)
            pos_hint: {'x': 0.0, 'y': 0.0}
        GradientShader:
            id: gradientshader
            wavevectors: shader.wavevectors
            fbo_size: shader.fbo_size
            period: shader.period
            phase_increment: shader.phase_increment
            opacity: float(opacity_slider.value)
            pos_hint: {'x': 0.0, 'y': 0.0}
        # CorrelationShader:
        #     wavevectors: shader.wavevectors
        #     fbo_size: shader.fbo_size
        #     period: shader.period
        #     phase_increment: shader.phase_increment
        #     correlation_width: corr_width_slider.value
        #     orth_jump: 0.01 #orth_jump_slider.value
        #     correlation_cutoff: corr_cutoff_slider.value
        #     opacity: corr_opacity_slider.value
        #     pos_hint: {'x': 0.0, 'y': 0.0}
        LineDetectionShader:
            id: lineshader
            wavevectors: shader.wavevectors
            fbo_size: (critical_fbo_size_slider.value, critical_fbo_size_slider.value)
            period: shader.period
            phase_increment: shader.phase_increment
            opacity: float(critical_opacity_slider.value)
            pos_hint: {'x': 0.0, 'y': 0.0}
            critical_jump: critical_jump_slider.value
            input_texture: criticalshader.fbo_texture
            while_cutoff: int(while_cutoff_slider.value)
        CriticalShader:
            id: criticalshader
            wavevectors: shader.wavevectors
            fbo_size: (critical_fbo_size_slider.value, critical_fbo_size_slider.value)
            period: shader.period
            phase_increment: shader.phase_increment
            opacity: float(critical_opacity_slider.value)
            pos_hint: {'x': 0.0, 'y': 0.0}
            critical_jump: critical_jump_slider.value
        # SecondaryShader:
        #     input_texture: gradientshader.fbo_texture
        #     parent_shader: shader
        #     fs: critical_finder_shader
        #     fbo_size: shader.fbo_size
        #     pos_hint: {'x': 0.0, 'y': 0.0}
    VSeparator:
    BoxLayout:
        size_hint_y: None
        height: dp(40)
        Widget:
            size_hint_x: None
            width: dp(5)
        Label:
            size_hint_x: None
            width: self.texture_size[0] if self.texture_size[0] is not None else 10
            text: 'Grad overlay:'
        Slider:
            orientation: 'horizontal'
            id: opacity_slider
            min: 0.
            max: 1.
            value: 0.
        Label:
            size_hint_x: None
            width: sp(40)
            text: str(opacity_slider.value)[:4]
        Label:
            size_hint_x: None
            width: self.texture_size[0] if self.texture_size[0] is not None else 10
            text: 'while cutoff'
        Slider:
            orientation: 'horizontal'
            id: while_cutoff_slider
            min: 2
            max: 100
            value: 40
        Label:
            size_hint_x: None
            width: sp(40)
            text: str(while_cutoff_slider.value)[:4]
    VSeparator:
    BoxLayout:
        size_hint_y: None
        height: dp(40)
        Widget:
            size_hint_x: None
            width: dp(5)
        Label:
            size_hint_x: None
            width: self.texture_size[0] if self.texture_size[0] is not None else 10
            text: 'Critical overlay:'
        Slider:
            orientation: 'horizontal'
            id: critical_opacity_slider
            min: 0.
            max: 1.
            value: 1.
        Label:
            size_hint_x: None
            width: sp(40)
            text: str(critical_opacity_slider.value)[:4]
        Label:
            size_hint_x: None
            width: self.texture_size[0] if self.texture_size[0] is not None else 10
            text: 'Jump:'
        Slider:
            orientation: 'horizontal'
            id: critical_jump_slider
            min: 0.
            max: 0.15
            value: 0.03
        Label:
            size_hint_x: None
            width: sp(40)
            text: str(critical_jump_slider.value)[:4]

    VSeparator:
    BoxLayout:
        size_hint_y: None
        height: dp(40)
        Widget:
            size_hint_x: None
            width: dp(5)
        Label:
            size_hint_x: None
            width: self.texture_size[0] if self.texture_size[0] is not None else 10
            text: 'Phase increment:'
        Slider:
            orientation: 'horizontal'
            id: phase_slider
            min: 0.
            max: 2*3.14159265
            value: shader.phase_increment
        Label:
            size_hint_x: None
            width: sp(40)
            text: str(phase_slider.value)[:4]
        Button:
            size_hint_x: None
            width: sp(60)
            text: 'animate'
            on_press: shader.animate_phase_increment(5)
    VSeparator:
    BoxLayout:
        size_hint_y: None
        height: dp(40)
        Widget:
            size_hint_x: None
            width: dp(5)
        Label:
            size_hint_x: None
            width: self.texture_size[0] if self.texture_size[0] is not None else 10
            text: 'Resolution:'
        Slider:
            orientation: 'horizontal'
            id: size_slider
            min: 5
            max: 1000
            value: 512
        Label:
            size_hint_x: None
            width: sp(40)
            text: str(int(size_slider.value))
        Label:
            size_hint_x: None
            width: self.texture_size[0] if self.texture_size[0] is not None else 10
            text: 'Crit fbo_size:'
        Slider:
            orientation: 'horizontal'
            id: critical_fbo_size_slider
            min: 10 
            max: 2*size_slider.value
            value: size_slider.value * 2./3.
        Label:
            size_hint_x: None
            width: sp(40)
            text: str(critical_fbo_size_slider.value)[:4]
    VSeparator:
    BoxLayout:
        size_hint_y: None
        height: sp(40)
        Label:
            text: 'Scale:'
            size_hint_x: None
            width: self.texture_size[0] + 10
        TextInput:
            id: scale_input
            font_size: dp(20)
            text: '17'
            multiline: False
            on_text_validate: shader.set_periodic_shader(scale_input.text, shader.number, shader.downscale)
        Button:
            id: new_wv_button
            text: 'Generate new\n  wavevectors'
            on_press: shader.set_periodic_shader(scale_input.text, shader.number, shader.downscale)
        Button:
            text: 'View wavevectors'
            on_press: shader.view_wavevectors()

<NeumannShader>:
    fs: gradient_shader
    fbo_size: self.size

<CriticalShader>:
    shader_uniforms: 'uniform Sampler2D intensity_texture;\n\n'

<-ShaderWidget>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            texture: self.fbo_texture
            tex_coords: [0, 0, 1, 0, 1, 1, 0, 1]
            pos: self.pos
            size: self.size

<WvPopupContent>:
    ScrollView:
        GridLayout:
            cols: 1
            size_hint_y: None
            height: thetb.texture_size[1]
            Label:
                id: thetb
                halign: 'center'
                size_hint_y: None
                text_size: self.width-10, None
                height: self.texture_size[1]
                text: '\n'.join(map(lambda j: 'amp: {:.2f}, wv: [{:.2f}, {:.2f}], phase {:.2f}'.format(j[2], j[0][0], j[0][1], j[1]), root.wavevectors))
                

<WvPopup>:
    size_hint: 0.9, 0.9
    title: 'Wavevectors'
